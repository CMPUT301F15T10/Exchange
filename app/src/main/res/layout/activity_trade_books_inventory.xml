<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cmput301exchange.exchange.Trade_ItemsInventory">

    <TextView android:text="Items to Trade" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#111"
        android:textSize="25dp"
        android:id="@+id/textView19" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Items"
        android:id="@+id/textView19"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textColor="#111"
        android:textSize="22dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add More"
        android:id="@+id/IT_myAddItem"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:id="@+id/IT_myItems"
        android:layout_below="@+id/IT_myAddItem" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:id="@+id/view"
        android:layout_alignEnd="@+id/IT_friendAddItem"
        android:layout_marginTop="265dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:id="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:id="@+id/IT_friendItems"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend&apos;s Items"
        android:id="@+id/textView20"
        android:textColor="#111"
        android:textSize="22dp"
        android:layout_marginTop="277dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add More"
        android:id="@+id/IT_friendAddItem"
        android:textSize="20dp"
        android:layout_marginTop="267dp"
        android:layout_marginLeft="200dp" />


</RelativeLayout>
