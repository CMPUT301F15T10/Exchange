<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cmput301exchange.exchange.Fragments.ItemsTradeFragment">

    <TextView android:text="Items to Trade" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#111"
        android:textSize="25dp"
        android:id="@+id/IT_title" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/IT_Items"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:id="@+id/view"
        android:layout_marginTop="350dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:id="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/IT_Done"
        android:textSize="20dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="100dp"
        android:onClick="onDone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Quantity : "
        android:id="@+id/IT_ItemQuantity"
        android:layout_alignParentStart="true"
        android:layout_marginTop="380dp"
        android:textSize="22dp"
        android:textColor="#000" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/IT_SelectedQuantity"
        android:layout_alignTop="@+id/IT_ItemQuantity"
        android:layout_toEndOf="@+id/IT_ItemQuantity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/IT_TotalItems"
        android:layout_below="@+id/view"
        android:layout_toEndOf="@+id/IT_SelectedQuantity"
        android:layout_marginTop="350dp"
        android:textSize="22dp"
        android:textColor="#111" />


</RelativeLayout>
