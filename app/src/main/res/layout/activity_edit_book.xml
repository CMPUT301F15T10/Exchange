<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cmput301f15t10.exchange.Fragments.EditBookFragment"
    android:id="@+id/b">

    <TextView
        android:text="Edit Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editItem_EditItem"
        android:textSize="35dp"
        android:textColor="#111"
        android:layout_marginLeft="115dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:id="@+id/textView9"
        android:textColor="#111"
        android:textSize="25dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/EditItem_NameInput"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignEnd="@+id/EditItem_TypeInput"
        android:layout_alignStart="@+id/EditItem_Done" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Type:"
        android:id="@+id/textView10"
        android:textColor="#111"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/EditItem_TypeInput"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:layout_toEndOf="@+id/textView10"
        android:layout_alignStart="@+id/EditItem_Done" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quality:"
        android:id="@+id/textView11"
        android:textColor="#111"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_marginTop="240dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/EditItem_QualityInput"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:layout_toStartOf="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  /5    Stars"
        android:id="@+id/textView12"
        android:textSize="25dp"
        android:textColor="#111"
        android:layout_alignBottom="@+id/EditItem_QualityInput"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/EditItem_QuantityInput"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignStart="@+id/EditItem_TypeInput" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:id="@+id/textView13"
        android:textColor="#111"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/editText10"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Items"
        android:id="@+id/textView14"
        android:textSize="25dp"
        android:textColor="#111"
        android:layout_above="@+id/EditItem_CategorySpinner"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category:"
        android:id="@+id/textView15"
        android:textColor="#111"
        android:textSize="25dp"
        android:layout_below="@+id/EditItem_QuantityInput"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditItem_CategorySpinner"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignEnd="@+id/EditItem_NameInput"
        android:layout_toEndOf="@+id/EditItem_ViewComments" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="View Comments"
        android:id="@+id/EditItem_ViewComments"
        android:textSize="12dp"
        android:onClick="onViewComments"
        android:layout_alignTop="@+id/EditItem_Done"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView13" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Add/Remove Photo"
        android:id="@+id/EditItem_Photo"
        android:textSize="12dp"
        android:onClick="onClickPhoto"
        android:layout_alignTop="@+id/EditItem_Done"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:text="v"
        android:id="@+id/EditItem_Done"
        android:textSize="14dp"
        android:onClick="onSave"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>