<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cmput301f15t10.exchange.TradeManagerActivity">

    <TextView
        android:layout_width="170dp"
        android:layout_height="23dp"
        android:text="X number of trades"
        android:id="@+id/TM_showRequest"
        android:layout_marginTop="90dp"
        android:layout_alignParentStart="true"
        android:textSize="18dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Check Them"
        android:id="@+id/TM_checkRequest"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:textSize="16dp"
        android:onClick="onCheckRequest" />

    <Button
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:text="Make A trade"
        android:id="@+id/TM_makeTrade"
        android:layout_below="@+id/TM_checkRequest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:textSize="18dp"
        android:onClick="onMakeTrade" />

    <Button
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:text="My Current Trades"
        android:id="@+id/TM_currentTrade"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="120dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:onClick="onCurrentTrade" />

    <Button
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:text="My Past Trades"
        android:id="@+id/TM_pastTrade"
        android:layout_marginTop="325dp"
        android:layout_alignStart="@+id/TM_currentTrade"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:onClick="onPastTrade" />


</RelativeLayout>
