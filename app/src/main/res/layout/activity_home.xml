<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cmput301exchange.exchange.HomeActivity">

    <TextView android:text="@string/home_message" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_message"
        android:textSize="20sp"
        android:textColor="#111"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/home_inventory"
        android:id="@+id/button2"
        android:layout_marginTop="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:layout_marginStart="100dp"
        android:layout_centerInParent="true"
        android:onClick="inventory"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/home_trade"
        android:id="@+id/button4"
        android:layout_marginStart="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:onClick="tradeManager"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/home_people"
        android:id="@+id/button5"
        android:layout_marginStart="100dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:onClick="searchPeople"/>

</RelativeLayout>
