<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cmput301f15t10.exchange.HomeActivity">

    <TextView android:text="What do you feel like doing?" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:textColor="#111"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View My Inventory"
        android:id="@+id/button2"
        android:layout_marginTop="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="100dp"
        android:layout_centerInParent="true"
        android:textSize="17dp"
        android:onClick="inventory"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Trade manager"
        android:id="@+id/button4"
        android:layout_marginLeft="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:textSize="17dp"
        android:onClick="tradeManager"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Browse/Search People"
        android:id="@+id/button5"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        android:onClick="searchPeople"/>

</RelativeLayout>
