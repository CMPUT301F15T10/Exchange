<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cmput301f15t10.exchange.EditPasswordActivity">

    <TextView android:text="Edit Password" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="#111"
        android:id="@+id/textView22" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:id="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Password:"
        android:id="@+id/textView21"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:textColor="#111"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-enter Password:"
        android:id="@+id/textView23"
        android:textColor="#111"
        android:textSize="20dp"
        android:layout_marginTop="150dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Confirm"
        android:id="@+id/button18"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText12"
        android:layout_alignTop="@+id/textView21"
        android:layout_toEndOf="@+id/textView21" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText13"
        android:layout_alignTop="@+id/textView23"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView23" />


</RelativeLayout>
